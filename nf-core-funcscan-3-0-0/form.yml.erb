---
cluster: "pax"

attributes:
<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/cpu_partition.yml").indent(2) %>
<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/num_cores_generic.yml").indent(2) %>
<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/num_memory_generic.yml").indent(2) %>

  executor:
    label: Which nextflow executor to use?
    widget: select
    options:
    - [
        "slurm", "slurm",
        data-hide-partition: true,
        data-hide-num-cores: true,
        data-hide-num-memory: true
      ]
    - ["local", "local"]
    help: |
      With slurm, tasks will be distributed to different nodes, local means all tasks will run on a single node.

  workdir:
    label: "Working Directory"
    widget: "path_selector"
    directory: "/cluster/tufts"
    required: false
    label: Working directory
    favorites:
        - /cluster/tufts
        - /cluster/home
    
  resume:
    label: Resume
    widget: check_box
    checked_value: 1
    unchecked_value: 0
    help: |
           Resume previous run if found

  tower_access_token:
    widget: "text_field"
    required: false
    label: "TOWER_ACCESS_TOKEN (Optional)"
    help: "Your TOWER_ACCESS_TOKEN used to monitor runs on [Nextflow Tower](https://seqera.io)."



  input_output_options:
    label: "Input/output options"
    widget: 'check_box'
    html_options:
      data:
        hide-input-when-un-checked: true
        hide-outdir-when-un-checked: true
        hide-multiqc_title-when-un-checked: true
    help: "Define where the pipeline should find input data and save output data."

  input:
    label: "input"
    widget: path_selector
    directory: /cluster/tufts
    favorites:
      - /cluster/tufts
      - /cluster/home 
    help: "Path to comma-separated file containing sample names and paths to corresponding FASTA files, and optional annotation files."

  outdir:
    label: "outdir"
    widget: path_selector
    directory: /cluster/tufts
    favorites:
      - /cluster/tufts
      - /cluster/home 
    help: "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure."

  multiqc_title:
    label: "multiqc_title"
    widget: text_field
    help: "MultiQC report title. Printed as page header, used for filename if not otherwise specified."

  screening_type_activation:
    label: "Screening type activation"
    widget: 'check_box'
    html_options:
      data:
        hide-run_amp_screening-when-un-checked: true
        hide-run_arg_screening-when-un-checked: true
        hide-run_bgc_screening-when-un-checked: true
    help: "These parameters influence which workflow (ARG, AMP and/or BGC) to activate."

  run_amp_screening:
    label: "run_amp_screening"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate antimicrobial peptide genes screening tools."

  run_arg_screening:
    label: "run_arg_screening"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate antimicrobial resistance gene screening tools."

  run_bgc_screening:
    label: "run_bgc_screening"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate biosynthetic gene cluster screening tools."

  taxonomic_classification_general_options:
    label: "Taxonomic classification: general options"
    widget: 'check_box'
    html_options:
      data:
        hide-run_taxa_classification-when-un-checked: true
        hide-taxa_classification_tool-when-un-checked: true
        hide-taxa_classification_mmseqs_compressed-when-un-checked: true
    help: "These options influence whether to activate the taxonomic classification of the input nucleotide sequences."

  run_taxa_classification:
    label: "run_taxa_classification"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activates the taxonomic classification of input nucleotide sequences."

  taxa_classification_tool:
    label: "taxa_classification_tool"
    widget: select
    options:
      - ['mmseqs2', 'mmseqs2']
    help: "Specifies the tool used for taxonomic classification."

  taxa_classification_mmseqs_compressed:
    label: "taxa_classification_mmseqs_compressed"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "If MMseqs2 is chosen as taxonomic classification tool: Specifies if the output of all MMseqs2 subcommands shall be compressed."

  taxonomic_classification_mmseqs2_databases:
    label: "Taxonomic classification: MMseqs2 databases"
    widget: 'check_box'
    html_options:
      data:
        hide-taxa_classification_mmseqs_db-when-un-checked: true
        hide-taxa_classification_mmseqs_db_id-when-un-checked: true
        hide-taxa_classification_mmseqs_db_savetmp-when-un-checked: true
    help: "These parameters influence the database to be used in classifying the taxonomy."

  taxa_classification_mmseqs_db:
    label: "taxa_classification_mmseqs_db"
    widget: text_field
    help: "Specify a path to MMseqs2-formatted database."

  taxa_classification_mmseqs_db_id:
    label: "taxa_classification_mmseqs_db_id"
    widget: text_field
    value: "Kalamari"
    help: "Specify the label of the database to be used."

  taxa_classification_mmseqs_db_savetmp:
    label: "taxa_classification_mmseqs_db_savetmp"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Specify whether the temporary files should be saved."

  taxonomic_classification_mmseqs2_taxonomy:
    label: "Taxonomic classification: MMseqs2 taxonomy"
    widget: 'check_box'
    html_options:
      data:
        hide-taxa_classification_mmseqs_taxonomy_savetmp-when-un-checked: true
        hide-taxa_classification_mmseqs_taxonomy_searchtype-when-un-checked: true
        hide-taxa_classification_mmseqs_taxonomy_lcaranks-when-un-checked: true
        hide-taxa_classification_mmseqs_taxonomy_taxlineage-when-un-checked: true
        hide-taxa_classification_mmseqs_taxonomy_sensitivity-when-un-checked: true
        hide-taxa_classification_mmseqs_taxonomy_orffilters-when-un-checked: true
        hide-taxa_classification_mmseqs_taxonomy_lcamode-when-un-checked: true
        hide-taxa_classification_mmseqs_taxonomy_votemode-when-un-checked: true
    help: "These parameters influence the taxonomic classification step."

  taxa_classification_mmseqs_taxonomy_savetmp:
    label: "taxa_classification_mmseqs_taxonomy_savetmp"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Specify whether to save the temporary files."

  taxa_classification_mmseqs_taxonomy_searchtype:
    label: "taxa_classification_mmseqs_taxonomy_searchtype"
    widget: number_field
    value: 2
    step: 1
    help: "Specify the alignment type between database and query."

  taxa_classification_mmseqs_taxonomy_lcaranks:
    label: "taxa_classification_mmseqs_taxonomy_lcaranks"
    widget: text_field
    value: "kingdom,phylum,class,order,family,genus,species"
    help: "Specify the taxonomic levels to display in the result table."

  taxa_classification_mmseqs_taxonomy_taxlineage:
    label: "taxa_classification_mmseqs_taxonomy_taxlineage"
    widget: number_field
    value: 1
    step: 1
    help: "Specify whether to include or remove the taxonomic lineage."

  taxa_classification_mmseqs_taxonomy_sensitivity:
    label: "taxa_classification_mmseqs_taxonomy_sensitivity"
    widget: number_field
    value: 5.0
    step: 1
    help: "Specify the speed and sensitivity for taxonomy assignment."

  taxa_classification_mmseqs_taxonomy_orffilters:
    label: "taxa_classification_mmseqs_taxonomy_orffilters"
    widget: number_field
    value: 2.0
    step: 1
    help: "Specify the ORF search sensitivity in the prefilter step."

  taxa_classification_mmseqs_taxonomy_lcamode:
    label: "taxa_classification_mmseqs_taxonomy_lcamode"
    widget: number_field
    value: 3
    step: 1
    help: "Specify the mode to assign the taxonomy."

  taxa_classification_mmseqs_taxonomy_votemode:
    label: "taxa_classification_mmseqs_taxonomy_votemode"
    widget: number_field
    value: 1
    step: 1
    help: "Specify the weights of the taxonomic assignment."

  annotation_general_options:
    label: "Annotation: general options"
    widget: 'check_box'
    html_options:
      data:
        hide-annotation_tool-when-un-checked: true
        hide-save_annotations-when-un-checked: true
    help: "These options influence the generation of annotation files required for downstream steps in ARG, AMP, and BGC workflows."

  annotation_tool:
    label: "annotation_tool"
    widget: select
    options:
      - ['pyrodigal', 'pyrodigal']
      - ['prodigal', 'prodigal']
      - ['prokka', 'prokka']
      - ['bakta', 'bakta']
    help: "Specify which annotation tool to use for some downstream tools."

  save_annotations:
    label: "save_annotations"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Specify whether to save gene annotations in the results directory."

  annotation_bakta:
    label: "Annotation: BAKTA"
    widget: 'check_box'
    html_options:
      data:
        hide-annotation_bakta_db-when-un-checked: true
        hide-annotation_bakta_db_downloadtype-when-un-checked: true
        hide-annotation_bakta_singlemode-when-un-checked: true
        hide-annotation_bakta_mincontiglen-when-un-checked: true
        hide-annotation_bakta_translationtable-when-un-checked: true
        hide-annotation_bakta_gram-when-un-checked: true
        hide-annotation_bakta_complete-when-un-checked: true
        hide-annotation_bakta_renamecontigheaders-when-un-checked: true
        hide-annotation_bakta_compliant-when-un-checked: true
        hide-annotation_bakta_trna-when-un-checked: true
        hide-annotation_bakta_tmrna-when-un-checked: true
        hide-annotation_bakta_rrna-when-un-checked: true
        hide-annotation_bakta_ncrna-when-un-checked: true
        hide-annotation_bakta_ncrnaregion-when-un-checked: true
        hide-annotation_bakta_crispr-when-un-checked: true
        hide-annotation_bakta_skipcds-when-un-checked: true
        hide-annotation_bakta_pseudo-when-un-checked: true
        hide-annotation_bakta_skipsorf-when-un-checked: true
        hide-annotation_bakta_gap-when-un-checked: true
        hide-annotation_bakta_ori-when-un-checked: true
        hide-annotation_bakta_activate_plot-when-un-checked: true
        hide-annotation_bakta_hmms-when-un-checked: true
    help: "BAKTA is a tool developed to annotate bacterial genomes and plasmids from both isolates and MAGs. More info: https://github.com/oschwengers/bakta"

  annotation_bakta_db:
    label: "annotation_bakta_db"
    widget: text_field
    help: "Specify a path to a local copy of a BAKTA database."

  annotation_bakta_db_downloadtype:
    label: "annotation_bakta_db_downloadtype"
    widget: select
    options:
      - ['full', 'full']
      - ['light', 'light']
    help: "Download full or light version of the Bakta database if not supplying own database."

  annotation_bakta_singlemode:
    label: "annotation_bakta_singlemode"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Use the default genome-length optimised mode (rather than the metagenome mode)."

  annotation_bakta_mincontiglen:
    label: "annotation_bakta_mincontiglen"
    widget: number_field
    value: 1
    step: 1
    help: "Specify the minimum contig size."

  annotation_bakta_translationtable:
    label: "annotation_bakta_translationtable"
    widget: number_field
    value: 11
    step: 1
    help: "Specify the genetic code translation table."

  annotation_bakta_gram:
    label: "annotation_bakta_gram"
    widget: select
    options:
      - ['?', '?']
      - ['+', '+']
      - ['-', '-']
    help: "Specify the type of bacteria to be annotated to detect signaling peptides."

  annotation_bakta_complete:
    label: "annotation_bakta_complete"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Specify that all contigs are complete replicons."

  annotation_bakta_renamecontigheaders:
    label: "annotation_bakta_renamecontigheaders"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Changes the original contig headers."

  annotation_bakta_compliant:
    label: "annotation_bakta_compliant"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Clean the result annotations to standardise them to Genbank/ENA conventions."

  annotation_bakta_trna:
    label: "annotation_bakta_trna"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate tRNA detection & annotation."

  annotation_bakta_tmrna:
    label: "annotation_bakta_tmrna"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate tmRNA detection & annotation."

  annotation_bakta_rrna:
    label: "annotation_bakta_rrna"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate rRNA detection & annotation."

  annotation_bakta_ncrna:
    label: "annotation_bakta_ncrna"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate ncRNA detection & annotation."

  annotation_bakta_ncrnaregion:
    label: "annotation_bakta_ncrnaregion"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate ncRNA region detection & annotation."

  annotation_bakta_crispr:
    label: "annotation_bakta_crispr"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate CRISPR array detection & annotation."

  annotation_bakta_skipcds:
    label: "annotation_bakta_skipcds"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip CDS detection & annotation."

  annotation_bakta_pseudo:
    label: "annotation_bakta_pseudo"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate pseudogene detection & annotation."

  annotation_bakta_skipsorf:
    label: "annotation_bakta_skipsorf"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip sORF detection & annotation."

  annotation_bakta_gap:
    label: "annotation_bakta_gap"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate gap detection & annotation."

  annotation_bakta_ori:
    label: "annotation_bakta_ori"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate oriC/oriT detection & annotation."

  annotation_bakta_activate_plot:
    label: "annotation_bakta_activate_plot"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activate generation of circular genome plots."

  annotation_bakta_hmms:
    label: "annotation_bakta_hmms"
    widget: text_field
    help: "Supply a path of an HMM file of trusted hidden markov models in HMMER format for CDS annotation"

  annotation_prokka:
    label: "Annotation: Prokka"
    widget: 'check_box'
    html_options:
      data:
        hide-annotation_prokka_singlemode-when-un-checked: true
        hide-annotation_prokka_rawproduct-when-un-checked: true
        hide-annotation_prokka_kingdom-when-un-checked: true
        hide-annotation_prokka_gcode-when-un-checked: true
        hide-annotation_prokka_mincontiglen-when-un-checked: true
        hide-annotation_prokka_evalue-when-un-checked: true
        hide-annotation_prokka_coverage-when-un-checked: true
        hide-annotation_prokka_cdsrnaolap-when-un-checked: true
        hide-annotation_prokka_rnammer-when-un-checked: true
        hide-annotation_prokka_compliant-when-un-checked: true
        hide-annotation_prokka_addgenes-when-un-checked: true
        hide-annotation_prokka_retaincontigheaders-when-un-checked: true
    help: "Prokka annotates genomic sequences belonging to bacterial, archaeal and viral genomes. More info: https://github.com/tseemann/prokka"

  annotation_prokka_singlemode:
    label: "annotation_prokka_singlemode"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Use the default genome-length optimised mode (rather than the metagenome mode)."

  annotation_prokka_rawproduct:
    label: "annotation_prokka_rawproduct"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Suppress the default clean-up of the gene annotations."

  annotation_prokka_kingdom:
    label: "annotation_prokka_kingdom"
    widget: select
    options:
      - ['Bacteria', 'Bacteria']
      - ['Archaea', 'Archaea']
      - ['Mitochondria', 'Mitochondria']
      - ['Viruses', 'Viruses']
    help: "Specify the kingdom that the input represents."

  annotation_prokka_gcode:
    label: "annotation_prokka_gcode"
    widget: number_field
    value: 11
    step: 1
    help: "Specify the translation table used to annotate the sequences."

  annotation_prokka_mincontiglen:
    label: "annotation_prokka_mincontiglen"
    widget: number_field
    value: 1
    step: 1
    help: "Minimum contig size required for annotation (bp)."

  annotation_prokka_evalue:
    label: "annotation_prokka_evalue"
    widget: number_field
    value: 1e-06
    step: 1
    help: "E-value cut-off."

  annotation_prokka_coverage:
    label: "annotation_prokka_coverage"
    widget: number_field
    value: 80
    step: 1
    help: "Set the assigned minimum coverage."

  annotation_prokka_cdsrnaolap:
    label: "annotation_prokka_cdsrnaolap"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Allow transfer RNA (trRNA) to overlap coding sequences (CDS)."

  annotation_prokka_rnammer:
    label: "annotation_prokka_rnammer"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Use RNAmmer for rRNA prediction."

  annotation_prokka_compliant:
    label: "annotation_prokka_compliant"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Force contig name to Genbank/ENA/DDJB naming rules."

  annotation_prokka_addgenes:
    label: "annotation_prokka_addgenes"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Add the gene features for each CDS hit."

  annotation_prokka_retaincontigheaders:
    label: "annotation_prokka_retaincontigheaders"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Retains contig names."

  annotation_prodigal:
    label: "Annotation: Prodigal"
    widget: 'check_box'
    html_options:
      data:
        hide-annotation_prodigal_singlemode-when-un-checked: true
        hide-annotation_prodigal_closed-when-un-checked: true
        hide-annotation_prodigal_transtable-when-un-checked: true
        hide-annotation_prodigal_forcenonsd-when-un-checked: true
    help: "Prodigal is a protein-coding gene prediction tool developed to run on bacterial and archaeal genomes. More info: https://github.com/hyattpd/prodigal/wiki"

  annotation_prodigal_singlemode:
    label: "annotation_prodigal_singlemode"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Specify whether to use Prodigal's single-genome mode for long sequences."

  annotation_prodigal_closed:
    label: "annotation_prodigal_closed"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Does not allow partial genes on contig edges."

  annotation_prodigal_transtable:
    label: "annotation_prodigal_transtable"
    widget: number_field
    value: 11
    step: 1
    help: "Specifies the translation table used for gene annotation."

  annotation_prodigal_forcenonsd:
    label: "annotation_prodigal_forcenonsd"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Forces Prodigal to scan for motifs."

  annotation_pyrodigal:
    label: "Annotation: Pyrodigal"
    widget: 'check_box'
    html_options:
      data:
        hide-annotation_pyrodigal_singlemode-when-un-checked: true
        hide-annotation_pyrodigal_closed-when-un-checked: true
        hide-annotation_pyrodigal_transtable-when-un-checked: true
        hide-annotation_pyrodigal_forcenonsd-when-un-checked: true
        hide-annotation_pyrodigal_usespecialstopcharacter-when-un-checked: true
    help: "Pyrodigal is a resource-optimized wrapper around Prodigal, producing protein-coding gene predictions of bacterial and archaeal genomes. Read more at the Pyrodigal GitHub repository (https://github.com/althonos/pyrodigal) or its documentation (https://pyrodigal.readthedocs.io)."

  annotation_pyrodigal_singlemode:
    label: "annotation_pyrodigal_singlemode"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Specify whether to use Pyrodigal's single-genome mode for long sequences."

  annotation_pyrodigal_closed:
    label: "annotation_pyrodigal_closed"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Does not allow partial genes on contig edges."

  annotation_pyrodigal_transtable:
    label: "annotation_pyrodigal_transtable"
    widget: number_field
    value: 11
    step: 1
    help: "Specifies the translation table used for gene annotation."

  annotation_pyrodigal_forcenonsd:
    label: "annotation_pyrodigal_forcenonsd"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Forces Pyrodigal to scan for motifs."

  annotation_pyrodigal_usespecialstopcharacter:
    label: "annotation_pyrodigal_usespecialstopcharacter"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "This forces Pyrodigal to append asterisks (`*`) as stop codon indicators. Do not use when running AMP workflow."

  protein_annotation:
    label: "Protein Annotation: INTERPROSCAN"
    widget: 'check_box'
    html_options:
      data:
        hide-run_protein_annotation-when-un-checked: true
        hide-protein_annotation_tool-when-un-checked: true
        hide-protein_annotation_interproscan_db_url-when-un-checked: true
        hide-protein_annotation_interproscan_db-when-un-checked: true
        hide-protein_annotation_interproscan_applications-when-un-checked: true
        hide-protein_annotation_interproscan_enableprecalc-when-un-checked: true
    help: "Functionally annotates all annotated coding regions."

  run_protein_annotation:
    label: "run_protein_annotation"
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Activates the functional annotation of annotated coding regions to provide more information about the codon regions classified."

  protein_annotation_tool:
    label: "protein_annotation_tool"
    widget: select
    options:
      - ['InterProScan', 'InterProScan']
    help: "Specifies the tool used for further protein annotation."

  protein_annotation_interproscan_db_url:
    label: "protein_annotation_interproscan_db_url"
    widget: text_field
    value: "https://ftp.ebi.ac.uk/pub/software/unix/iprscan/5/5.72-103.0/interproscan-5.72-103.0-64-bit.tar.gz"
    help: "Change the database version used for annotation."

  protein_annotation_interproscan_db:
    label: "protein_annotation_interproscan_db"
    widget: text_field
    help: "Path to pre-downloaded InterProScan database."

  protein_annotation_interproscan_applications:
    label: "protein_annotation_interproscan_applications"
    widget: text_field
