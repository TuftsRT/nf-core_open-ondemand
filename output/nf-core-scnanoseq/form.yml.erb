---
cluster: "tuftshpc"

attributes:
<%= File.read("/etc/ood/config/apps/dashboard/batch_connect/partials/reservation.yml").indent(2) %>
  executor:
    label: Which nextflow executor to use?
    widget: select
    options:
    - ["slurm", "slurm"]
    - ["local", "local"]
    help: |
      With slurm, tasks will be distributed to different nodes, local means all tasks will run on a single node.

  cpu_partition:
    widget: "select"
    label: "Partition"
    help: "NOTE: Please do not choose specific lab partitions if you are not a member of that lab."
    value: "batch"
    options:
      - ["batch","batch"]
      - ["largemem", "largemem"]
      - ["preempt", "preempt"]
      - ["patralab", "patralab"]

  num_core:
    widget: number_field
    label: Cores
    min: 1
    max: 128
    value: 1
    help: |
      Number of cores (up to 128) for a shared job.  Non-shared jobs will have exclusive nodes and be charged at 128 cores per node requested

  num_memory:
    widget: "select"
    label: "Amount of memory"
    options:
    - ["1GB", 1GB]
    - ["2GB", 2GB]
    - ["4GB", 4GB]
    - ["8GB", 8GB]
    - ["16GB", 16GB]
    - ["32GB", 32GB]
    - ["64GB", 64GB]
    - ["72GB", 72GB]
    - ["80GB", 80GB]
    - ["96GB", 96GB]
    - ["128GB", 128GB]
    - ["160GB", 160GB]
    - ["256GB", 256GB]

  workdir:
    label: "Working Directory"
    data-filepicker: true
    data-target-file-type: dirs  # Valid values are: files, dirs, or both
    readonly: false
    help: "Select your project directory; defaults to $HOME"
    
  resume:
    label: resume
    widget: check_box
    checked_value: 1
    unchecked_value: 0
    help: |
           Resume previous run if found

  TOWER_ACCESS_TOKEN:
    widget: "text_field"
    required: false
    label: "TOWER_ACCESS_TOKEN (Optional)"
    help: "Your TOWER_ACCESS_TOKEN used to monitor runs on [Nextflow Tower](https://seqera.io)."


  version:
    label: Version
    widget: select
    options:
      - ['1.0.0', '/cluster/tufts/biocontainers/nf-core/pipelines/nf-core-scnanoseq/1.0.0/1_0_0']

  input:
    label: input
    widget: text_field
    help: "Path to comma-separated file containing information about the samples in the experiment."

  outdir:
    label: outdir
    widget: text_field
    help: "The output directory where the results will be saved. You have to use absolute paths to storage on Cloud infrastructure."

  multiqc_title:
    label: multiqc_title
    widget: text_field
    help: "MultiQC report title. Printed as page header, used for filename if not otherwise specified."

  genome:
    label: iGenomes
    widget: select
    required: false
    options:
      - ['None', ' ']
      - ['GRCh37', 'GRCh37']
      - ['GRCh38', 'GRCh38']
      - ['GRCm38', 'GRCm38']
      - ['TAIR10', 'TAIR10']
      - ['EB2', 'EB2']
      - ['UMD3.1', 'UMD3.1']
      - ['WBcel235', 'WBcel235']
      - ['CanFam3.1', 'CanFam3.1']
      - ['GRCz10', 'GRCz10']
      - ['BDGP6', 'BDGP6']
      - ['EquCab2', 'EquCab2']
      - ['EB1', 'EB1']
      - ['Galgal4', 'Galgal4']
      - ['Gm01', 'Gm01']
      - ['Mmul_1', 'Mmul_1']
      - ['IRGSP-1.0', 'IRGSP-1.0']
      - ['CHIMP2.1.4', 'CHIMP2.1.4']
      - ['Rnor_5.0', 'Rnor_5.0']
      - ['Rnor_6.0', 'Rnor_6.0']
      - ['R64-1-1', 'R64-1-1']
      - ['EF2', 'EF2']
      - ['Sbi1', 'Sbi1']
      - ['Sscrofa10.2', 'Sscrofa10.2']
      - ['AGPv3', 'AGPv3']
      - ['hg38', 'hg38']
      - ['hg19', 'hg19']
      - ['mm10', 'mm10']
      - ['bosTau8', 'bosTau8']
      - ['ce10', 'ce10']
      - ['canFam3', 'canFam3']
      - ['danRer10', 'danRer10']
      - ['dm6', 'dm6']
      - ['equCab2', 'equCab2']
      - ['galGal4', 'galGal4']
      - ['panTro4', 'panTro4']
      - ['rn6', 'rn6']
      - ['sacCer3', 'sacCer3']
      - ['susScr3', 'susScr3']
    help: "Name of iGenomes reference."
  fasta:
    label: fasta
    widget: text_field
    help: "Path to FASTA genome file."

  gtf:
    label: gtf
    widget: text_field
    help: "Path to GTF file."

  split_amount:
    value: "0"
    label: split_amount
    widget: text_field
    help: "The amount of lines to split  the FASTQ into."

  min_length:
    value: "1"
    label: min_length
    widget: text_field
    help: "Choose minimum read length."

  min_q_score:
    value: "10"
    label: min_q_score
    widget: text_field
    help: "Choose minimum average read quality score."

  skip_trimming:
    label: skip_trimming
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip quality trimming step."

  whitelist:
    label: whitelist
    widget: text_field
    help: "User-provided file containing a list of cellular barcodes. Using this parameter will override the default whitelists provided by the pipeline and use the user-provided one instead."

  barcode_format:
    widget: select
    options:
      - ['None', ' ']
      - ['10X_3v3', '10X_3v3']
      - ['10X_5v2', '10X_5v2']
    label: barcode_format
    help: "Specify the format for the barcode+umi. This parameter also defines a default barcode whitelist for the pipeline to use for barcode calling, this can be overidden with the `whitelist` parameter."

  stranded:
    widget: select
    options:
      - ['None', ' ']
      - ['None', 'None']
      - ['reverse', 'reverse']
      - ['forward', 'forward']
    label: stranded
    help: "Library strandness option."

  kmer_size:
    value: "14"
    label: kmer_size
    widget: text_field
    help: "Minimizer k-mer length."

  save_secondary_alignment:
    label: save_secondary_alignment
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Save secondary alignment outputs."

  retain_introns:
    widget: select
    options:
      - ['true', 'true']
      - ['false', 'false']
    label: retain_introns
    help: "Indicate whether to include introns in the count matrices"

  skip_qc:
    label: skip_qc
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip all QC."

  skip_fastqc:
    label: skip_fastqc
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip FastQC."

  skip_nanoplot:
    label: skip_nanoplot
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip Nanoplot."

  skip_toulligqc:
    label: skip_toulligqc
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip ToulligQC."

  skip_fastq_nanocomp:
    label: skip_fastq_nanocomp
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip NanoComp from FASTQ file(s)."

  skip_bam_nanocomp:
    label: skip_bam_nanocomp
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip NanoComp from BAM file(s)."

  skip_rseqc:
    label: skip_rseqc
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip RSeQC."

  skip_seurat:
    label: skip_seurat
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip Seurat QC."

  skip_save_minimap2_index:
    label: skip_save_minimap2_index
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip saving minimap2 index."

  skip_dedup:
    label: skip_dedup
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip umi dedup."

  skip_multiqc:
    label: skip_multiqc
    widget: select
    options:
      - ['false', 'false']
      - ['true', 'true']
    help: "Skip MultiQC."


form:
  - bc_num_hours
  - executor
  - cpu_partition
  - num_core
  - num_memory
  - reservation
  - version
  - workdir
  - outdir
  - input
  - multiqc_title
  - genome
  - fasta
  - gtf
  - split_amount
  - min_length
  - min_q_score
  - skip_trimming
  - whitelist
  - barcode_format
  - stranded
  - kmer_size
  - save_secondary_alignment
  - retain_introns
  - skip_qc
  - skip_fastqc
  - skip_nanoplot
  - skip_toulligqc
  - skip_fastq_nanocomp
  - skip_bam_nanocomp
  - skip_rseqc
  - skip_seurat
  - skip_save_minimap2_index
  - skip_dedup
  - skip_multiqc
  - TOWER_ACCESS_TOKEN
  - resume
